{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "noEmit": true,
    "declaration": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "allowJs": true
  },
  "include": [
    "test/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
