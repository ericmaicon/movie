{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationDir": "dist/typings",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "~/themes/*": ["../../themes/*"],
      "~/*": ["src/*"],
      "~/test/*": ["test/*"]
    }
  },
  "include": ["test/**/*", "src/**/*"],
  "exclude": ["node_modules"]
}
